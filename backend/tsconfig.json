{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "ES2023",

    "strict": true,

    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
    "removeComments": true,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}